{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["airbnb"],
    "plugins":["prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": ["webpack.config.js", "**/dist/*.js","*.json","**/__tests__/*.js"],
    "rules": {
        "nonblock-statement-body-position":"off",
        "no-param-reassign":"off",
        // "no-console":"off",
        "no-plusplus":"off",
        "max-len":"off",
        "class-methods-use-this":"off",
        "prefer-destructuring":"off",
        "no-unused-expressions":"off",
        "operator-linebreak":"off"
    }
}
